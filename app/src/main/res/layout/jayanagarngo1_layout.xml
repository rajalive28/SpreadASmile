<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/choose"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/textView2"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Select    "
            android:id="@+id/btnselect2"
            android:onClick="selectngo"
            android:background="@drawable/food1"
            android:textColor="#D1EAFF"
            android:textSize="22sp"
            android:layout_alignTop="@+id/btnpre"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     Next    "
            android:id="@+id/btnnext"
            android:onClick="nextngo"
            android:background="@drawable/food1"
            android:textColor="#D1EAFF"
            android:textSize="22sp"
            android:layout_alignTop="@+id/btnselect2"
            android:layout_toRightOf="@+id/btnselect2"
            android:layout_toEndOf="@+id/btnselect2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:id="@+id/btnpre"
            android:background="@drawable/food1"
            android:textColor="#D1EAFF"
            android:textSize="22sp"
            android:onClick="prengo"
            android:layout_marginBottom="28dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btnselect2"
            android:layout_toStartOf="@+id/btnselect2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dignity foundation"
            android:id="@+id/textView5"
            android:textColor="#D1EAFF"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We are committed to changing the way people look at ageing in India. We enable senior citizens to lead active lives through easy access to trusted information, opportunities for productive ageing and social support services."
            android:id="@+id/textView15"
            android:layout_marginBottom="41dp"
            android:textColor="#D1EAFF"
            android:layout_above="@+id/btnselect2"
            android:layout_alignLeft="@+id/btnpre"
            android:layout_alignStart="@+id/btnpre"
            android:textSize="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_above="@+id/textView15"
            android:layout_alignLeft="@+id/textView15"
            android:layout_alignStart="@+id/textView15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/diginity"
            android:layout_above="@+id/textView7"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:layout_below="@+id/textView19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

    </RelativeLayout>
</LinearLayout>