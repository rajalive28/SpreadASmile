                android:textColor="#D1EAFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textSize="20sp"
                android:text="Feel Free to Contact Us at "
                android:layout_below="@+id/textView8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SpreadaSmile@gmail.com"
                android:textSize="20sp"
                android:textColor="#0000ff"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#D1EAFF"
                android:layout_height="wrap_content"
                android:text="Or"
                android:textSize="20sp"
                android:id="@+id/textView12"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/textView11"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D1EAFF"
                android:textSize="20sp"
                android:text="Call/Message  us between 9.00AM to 5.00PM to"
                android:id="@+id/textView14"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textColor="#D1EAFF"
                android:layout_height="wrap_content"
                android:text="Nikhil : 9036085742               Raj    : 8951038181                Mayank : 9620559280"
                android:id="@+id/textView13"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/textView14"
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignStart="@+id/textView14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_above="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="  " />


    </RelativeLayout>


